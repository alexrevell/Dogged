<% if current_user.role === 'user' %>
  <h1><%=current_user.name %>, Welcome To Dogged</h1>
  <h2>The site for registering your doggly friends</h2>
  <div>
    <h1>My Details</h1>
    <h3>Name</h3><p><%= current_user.name %></p>
    <h3>Address</h3><p><%= current_user.address %></p>
    <h3>Email</h3><p><%= current_user.email %></p>
  </div>

  <div>
    <h1>My Dogs</h1>
    <% current_user.dogs.each do |dog| %>
    <div>
      <p><%= dog.name %></p>
      <p><%= dog.breed %></p>
      <p><%= dog.date_of_birth %></p>
      <p><%= link_to 'Update Dog Details', edit_dogs_path %></p>
    </div>
  </div>
  <h1><%= link_to 'Register New Dog', new_dogs_path %></h1>
  <% end %>
  <!-- separate partial? -->
<% elsif current_user.role === 'admin'%>
  <ul>
  <% User.all.each do |user| %>
    <li>
      <%= user.name %>
      <%= user.dogs.each do |dog| %>
        <p><%= dog.name %></p>
        <p><%= dog.breed %></p>
        <p><%= dog.date_of_birth %></p>
      <% end %>
    </li>
  </ul>
  <% end %>
<% end %>