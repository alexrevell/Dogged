
<div class="authform">
  <%= simple_form_for :dog do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :breed %><br>
      <%= f.text_field :text, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth %><br>
      <%= f.text_field :date, class: 'form-control' %>
    </div>
     <div class="form-group">
      <%= f.submit 'Update', :method => :patch, :class => 'button right' %>
    </div>
  <% end %>
  <div class="authform">
    <h3>Remove Dog</h3>
    <p>Sorry to hear of your loss</p>
    <%= button_to "Remove Dog", dogs_path(:dog), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button right' %>
  </div>
</div>

