  <h1>Dogged</h1>

  <h2><%= @user.name %></h2>

  <div>
    <h1>My Details</h1>
    <div class="row">
      <div class="col-md-6">
        <table class="table table-striped">
          <thead>
            <tr>
              <td><%= @user.name %></td>
            </tr>
          </thead>
          <tbody>
            <tr><td>Name</td><td><%= @user.name %></td></tr>
            <tr><td>Address</td><td><%= @user.address %></td></tr>
            <tr><td>Email</td><td><%= @user.email %></td></tr>
          </tbody>
          <tfoot>
            <tr>
              <td><%= link_to 'Update Details', edit_user_registration_path %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <div>
    <h1>My Dogs</h1>
    <% @user.dogs.each do |dog| %>
    <div class="row">
      <div class="col-md-6">
        <table class="table table-striped">
          <tbody>
            <tr><td>Name</td><td><%= dog.name %></td></tr>
            <tr><td>Breed</td><td><%= dog.breed %></td></tr>
            <tr><td>DOB</td><td><%= dog.date_of_birth %></td></tr>
            <tr><td>ID</td><td><%= dog.id %></td></tr>
            <tr><td>Currently Registered</td><td><%= dog.registered %></td></tr>
            <tr><td>Registered Until</td><td><%= dog.registered_until %></td></tr>

          </tbody>
          <tfoot>
            <tr><td><%= link_to 'Update Dog Details', edit_user_dog_path(user_id: @user.id, id: dog.id) %></td></tr>
          </tfoot>
        </table>
      </div>
    </div>
    <% end %>

    <p><%= link_to 'Register New Dog', new_user_dog_path(@user) %></p>
  </div>
  <!-- separate partial? -->
 <% if current_user.admin? %>
  <%= render 'layouts/admin_index' %>
<% end %>
